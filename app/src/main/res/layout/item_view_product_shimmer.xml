<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:id="@+id/cvProduct1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="13.00dp"
            android:layout_weight="0.5"
            android:elevation="0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="wrap_content"
                    android:layout_height="150.00dp"
                    android:id="@+id/ivImageSlider1"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER"
                    android:background="#DDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductTitle1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="#DDDDDD"/>

                <TextView
                    android:layout_width="70dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductQuantity1"
                    android:background="#DDDDDD"
                    android:textColor="#6F6F6F"
                    android:textSize="15.60sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvProductPrice1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="#DDDDDD"
                            android:textColor="@color/black"
                            android:textSize="15.60sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="78.00dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAdd1"
                            android:background="#DDDDDD"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:padding="5.20dp"
                            android:gravity="center"
                            android:textColor="@color/green"
                            android:textSize="14.30sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:id="@+id/cvProduct2"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="13.00dp"
            android:layout_weight="0.5"
            android:elevation="0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="wrap_content"
                    android:layout_height="150.00dp"
                    android:id="@+id/ivImageSlider2"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER"
                    android:background="#DDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductTitle2"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:background="#DDDDDD"/>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductQuantity2"
                    android:background="#DDDDDD"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="#6F6F6F"
                    android:textSize="15.60sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvProductPrice2"
                            android:background="#DDDDDD"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="15.60sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="78.00dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAdd2"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:padding="5.20dp"
                            android:gravity="center"
                            android:textColor="@color/green"
                            android:background="#DDDDDD"
                            android:textSize="14.30sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>